
# alt+shift+r to refresh

set $mod Mod1 
floating_modifier $mod
# mod+left click to re-position tiled window
# mod+left click to move floating window
# mod+right click to resize floating window

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- ~/.config/scripts/lock

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +25%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 25%-

#############################################
############## MY CONFIGS ###################
#############################################

bindsym XF86AudioPlay exec playerctl -p spotify play-pause
bindsym XF86AudioNext exec playerctl -p spotify next
bindsym XF86AudioPrev exec playerctl -p spotify previous

# Tinty-managed colors (tinty apply <scheme>)
include ~/.config/i3/colors

font pango:JetBrains Mono NF

for_window [class="^.*"] border pixel 1
# for_window [class="^.*"] title_format ""
focus_on_window_activation focus

# Base16 colors: border, background, text, indicator, child_border
client.focused          $base0D $base00 $base05 $base0D $base0D
client.unfocused        $base01 $base00 $base03 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08

bindsym Ctrl+j workspace 1
bindsym Ctrl+k workspace 2
bindsym Ctrl+l workspace 3
bindsym Ctrl+semicolon workspace 4

bindsym Ctrl+Shift+j workspace 5
bindsym Ctrl+Shift+k workspace 6
bindsym Ctrl+Shift+l workspace 7
bindsym Ctrl+Shift+semicolon workspace 8

bindsym $mod+1 move container to workspace 1
bindsym $mod+2 move container to workspace 2
bindsym $mod+3 move container to workspace 3
bindsym $mod+4 move container to workspace 4
bindsym $mod+5 move container to workspace 5
bindsym $mod+6 move container to workspace 6
bindsym $mod+7 move container to workspace 7
bindsym $mod+8 move container to workspace 8

bindsym $mod+Shift+r restart
# bindsym $mod+n focus next
bindsym $mod+Shift+f exec --no-startup-id "i3-msg fullscreen toggle"
bindsym $mod+Escape exec systemctl suspend
bindsym $mod+Ctrl+Escape exec systemctl poweroff
bindsym $mod+w kill
bindsym --whole-window button2 kill
bindsym $mod+ctrl+f floating toggle resize set 800 950, move position center

bindsym $mod+c exec --no-startup-id flameshot gui
bindsym $mod+f exec --no-startup-id rofi -show drun
bindsym $mod+r exec --no-startup-id "reaper & i3-msg 'workspace 4'"
bindsym $mod+m exec --no-startup-id spotify
bindsym $mod+e exec --no-startup-id thunar ~/Downloads
bindsym $mod+shift+d exec --no-startup-id brave-browser --app=https://excalidraw.com
bindsym $mod+n exec --no-startup-id brave-browser --app=https://app.simplenote.com
bindsym $mod+b exec --no-startup-id brave-browser


# Polybar toggle
bindsym $mod+Shift+b exec --no-startup-id polybar-msg cmd toggle

# Theme toggle (gruvbox dark/light)
bindsym $mod+Shift+t exec --no-startup-id ~/.local/bin/toggle-theme

# Focus mode (disable notifications)
bindsym $mod+Shift+n exec --no-startup-id ~/.local/bin/focus-toggle

# Screen recording toggle (SimpleScreenRecorder)
bindsym $mod+Shift+c exec --no-startup-id ~/.config/new-machine-setup/screen-record-toggle

# Lid suspend toggle (keep laptop awake when closed)
bindsym $mod+Shift+a exec --no-startup-id ~/.local/bin/lid-suspend-toggle

# Voice dictation toggle (faster-whisper large-v3-turbo)
bindsym $mod+v exec --no-startup-id ~/.config/new-machine-setup/voice-dictation

bindsym $mod+s workspace 6; exec --no-startup-id brave-browser --new-window "https://google.com/aimode"; exec --no-startup-id "sleep 0.5 && i3-msg fullscreen enable"
bindsym $mod+shift+s workspace 6; exec --no-startup-id brave-browser --new-window "https://grok.com"; exec --no-startup-id "sleep 0.5 && i3-msg fullscreen enable"
# bindsym $mod+a exec --no-startup-id systemd-run --user --scope --property=CPUQuota=300% --property=MemoryMax=4G alacritty
bindsym $mod+k exec --no-startup-id ~/.local/bin/kitty

exec --no-startup-id ~/.xsessionrc
# exec --no-startup-id xcompmgr -C
exec --no-startup-id feh --bg-scale ~/Documents/os_styling/wallpaper.png
# exec --no-startup-id picom -b  # disabled - causes idle crashes
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id "sleep 3 && xset r rate 250 40"
exec_always --no-startup-id setxkbmap -option ctrl:nocaps -layout us

exec --no-startup-id "echo enabled > /sys/bus/usb/devices/*/power/wakeup 2>/dev/null || true"

# Floating dialog size constraints (fixes massive file picker dialogs)
for_window [window_role="GtkFileChooserDialog"] floating enable, resize set 900 700, move position center
for_window [window_type="dialog"] floating enable

# Auto-assign applications to specific workspaces
assign [class="Spotify"] 5
assign [class="google-chrome"] 7
assign [class="Google-chrome"] 7

