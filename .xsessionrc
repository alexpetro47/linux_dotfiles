export QT_SCALE_FACTOR=1.8
export _JAVA_OPTIONS='-Dsun.java2d.uiScale=1.8'
export ELECTRON_FORCE_SCALE_FACTOR=1.8
export GDK_SCALE=1.5
export XCURSOR_THEME="ComixCursorWhite"
export XCURSOR_SIZE=60
export GTK_FONT_NAME="JetBrainsMono NF"
export GTK_MONOSPACE_FONT_NAME="JetBrainsMonoNL NF"
export QT_AUTO_SCREEN_SCALE_FACTOR=0 
export QT_ENABLE_HIGHDPI_SCALING=1
export MOZ_ENABLE_WAYLAND=0 
export GDK_DPI_SCALE=0.83
export QT_FONT_DPI=125 


# X11 resources for apps that read them directly
 xrdb -merge << 'EOF'
 Xft.dpi: 125
 Xft.antialias: true
 Xft.hinting: true
 Xft.hintstyle: hintslight
 Xft.rgba: rgb
 Xcursor.theme: ComixCursorWhite
 Xcursor.size: 60
 EOF

# Create GTK config files instead of using xsettings
mkdir -p ~/.config/gtk-3.0
cat > ~/.config/gtk-3.0/settings.ini << 'EOF'
[Settings]
gtk-font-name=JetBrainsMono NF
gtk-cursor-theme-name=ComixCursorWhite
gtk-cursor-theme-size=60
gtk-xft-antialias=1
gtk-xft-hinting=1
gtk-xft-hintstyle=hintslight
gtk-xft-rgba=rgb
EOF

cat > ~/.gtkrc-2.0 << 'EOF'
gtk-font-name="JetBrainsMono NF"
gtk-cursor-theme-name="ComixCursorWhite"
gtk-cursor-theme-size=60
EOF

xset r rate 225 50
xrandr --dpi 125
